- content_for :head do
  = stylesheet_link_tag "quiz_session"
  = javascript_include_tag "quiz_session"

- content_for :body do
  .page-container
    .sidebar
      .nav-container
      .question-list-container
        .section-title.centered Answered Questions
        %ol.submitted-question-list
          - @quiz_session.submitted_questions.each do |question|
            %li
              %h2.question-title= question.title
    .qs-body
      .question-container
        - if @current_question
          = render 'quiz_sessions/question_description', question: @current_question
      .answer-container
        = render 'answers/edit', answer: @current_answer, quiz_session: @quiz_session
